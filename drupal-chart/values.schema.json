{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "image": {
            "type": "object",
            "title": "镜像",
            "form": true,
            "properties": {
                "repository": {
                    "type": "string",
                    "title": "镜像库地址",
                    "form": true,
                    "description": ""
                },
                "tag": {
                    "type": "string",
                    "title": "镜像标签",
                    "form": true,
                    "description": ""
                },
                "pullPolicy": {
                    "type": "boolean",
                    "title": "强制更新",
                    "form": true,
                    "description": ""
                }
            }
        },
        "replicaCount": {
            "type": "integer",
            "title": "副本数",
            "form": true,
            "description": "副本数,就是启动的容器的数量。"
        },
        "podEnv": {
            "type": "object",
            "form": true,
            "title": "Drupal 配置",
            "properties": {
                "drupalUploadSize": {
                    "type": "string",
                    "title": "文件上传大小",
                    "form": true,
                    "description": "默认值：32M。"
                },
                "drupalSiteEnv": {
                    "type": "string",
                    "title": "站点环境",
                    "form": true,
                    "description": "可选值：dev|prod；dev会开启和记录相关报错，prod则会关闭相关报错。"
                },
                "drupalDatabaseType": {
                    "type": "string",
                    "title": "数据库类型",
                    "form": true,
                    "description": ""
                },
                "drupalDatabaseHost": {
                    "type": "string",
                    "title": "数据库地址",
                    "form": true,
                    "description": ""
                },
                "drupalDatabasePort": {
                    "type": "integer",
                    "title": "数据库端口",
                    "form": true,
                    "description": ""
                },
                "drupalDatabaseUser": {
                    "type": "string",
                    "title": "数据库用户",
                    "form": true,
                    "description": ""
                },
                "drupalDatabasePassword": {
                    "type": "string",
                    "title": "数据库密码",
                    "form": true,
                    "description": ""
                },
                "drupalDatabaseName": {
                    "type": "string",
                    "title": "数据库名",
                    "form": true,
                    "description": ""
                }
            }
        },
        "persistence": {
            "type": "object",
            "title": "存储设置",
            "form": true,
            "properties": {
                "storageClass": {
                    "type": "string",
                    "title": "存储类型",
                    "form": true,
                    "description": "对应的是kubernetes的StorageClass"
                },
                "accessMode": {
                    "type": "string",
                    "title": "访问模式",
                    "form": true,
                    "description": "访问模式，可选值：ReadWriteOnce,ReadWriteMany,ReadOnlyMany"
                },
                "size": {
                    "type": "string",
                    "title": "存储空间",
                    "form": true,
                    "description": "",
                    "render": "slider",
                    "sliderMin": 1,
                    "sliderMax": 100,
                    "sliderUnit": "Gi"
                },
                "mountPath": {
                    "type": "string",
                    "title": "挂载路径",
                    "form": true,
                    "description": "挂载路径，一般对应容器中drupal files路径，如/var/www/html/docroot/sites/default/files"
                },
                "existingClaim": {
                    "type": "string",
                    "title": "使用已有PVC",
                    "form": true,
                    "description": "使用已有PVC，否则系统会自动创建PV"
                }
            }
        },
        "autoscaling": {
            "type": "object",
            "title": "自动伸缩配置",
            "form": true,
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "title": "是否启用自动伸缩",
                    "form": true
                },
                "targetCPUUtilizationPercentage": {
                    "type": "integer",
                    "title": "触发条件",
                    "form": true,
                    "description": "CPU使用率",
                    "hidden": {
                        "value": false,
                        "path": "autoscaling/enabled"
                    }
                },
                "minReplicas": {
                    "type": "integer",
                    "title": "最小副本数",
                    "form": true,
                    "description": "最小副本数",
                    "hidden": {
                        "value": false,
                        "path": "autoscaling/enabled"
                    }
                },
                "maxReplicas": {
                    "type": "integer",
                    "title": "最大副本数",
                    "form": true,
                    "description": "最大副本数",
                    "hidden": {
                        "value": false,
                        "path": "autoscaling/enabled"
                    }
                }
            }
        },

        "ingress": {
            "type": "object",
            "title": "ingress配置",
            "form": true,
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "title": "启用",
                    "form": true
                },
                "className": {
                    "type": "string",
                    "title": "ingress classname",
                    "form": true,
                    "description": "默认为nginx ingress",
                    "hidden": {
                        "value": false,
                        "path": "ingress/enabled"
                    }
                },
                "host": {
                    "type": "string",
                    "title": "域名",
                    "form": true,
                    "description": "多个域名用逗号(,)分割",
                    "hidden": {
                        "value": false,
                        "path": "ingress/enabled"
                    }
                },
                "tls": {
                    "type": "array"
                }
            }
        },
        "ingress_subdir": {
            "type": "object",
            "title": "ingress 子路径配置",
            "form": true,
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "title": "启用",
                    "form": true
                },
                "className": {
                    "type": "string",
                    "title": "ingress classname",
                    "form": true,
                    "description": "默认为nginx ingress",
                    "hidden": {
                        "value": false,
                        "path": "ingress_subdir/enabled"
                    }
                },
                "host": {
                    "type": "string",
                    "title": "域名",
                    "form": true,
                    "hidden": {
                        "value": false,
                        "path": "ingress_subdir/enabled"
                    }
                },
                "path": {
                    "type": "string",
                    "title": "路径",
                    "form": true,
                    "hidden": {
                        "value": false,
                        "path": "ingress_subdir/enabled"
                    }
                }
            }
        },
        "nodeSelector": {
            "type": "object",
            "title": "服务器选择",
            "form": true,
            "description": "example: hostname: k8s-node1"
        }
    }
}